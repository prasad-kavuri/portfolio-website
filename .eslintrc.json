{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "off"
  },
  "globals": {
    "pipelineState": true,
    "safeGetElement": true,
    "safeSetHTML": true,
    "safeSetStyle": true,
    "setQuery": true,
    "clearPipeline": true,
    "processWithRAG": true,
    "showError": true,
    "showSuccess": true,
    "describe": true,
    "test": true,
    "expect": true,
    "beforeEach": true
  }
}
