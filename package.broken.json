{
    "name": "rag-pipeline-portfolio",
    "version": "1.0.0",
    "description": "RAG Pipeline Demo with Testing Suite",
    "main": "index.html",
    "scripts": {
        "test": "npm run test:unit && npm run test:e2e",
        "test:unit": "jest",
        "test:e2e": "playwright test",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ui": "open test-suite.html",
        "lint": "eslint *.js",
        "lint:fix": "eslint *.js --fix",
        "serve": "http-server -p 8080",
        "validate": "html-validate *.html"
    },
    "devDependencies": {
        "@playwright/test": "^1.40.0",
        "eslint": "^8.56.0",
        "html-validate": "^8.7.0",
        "http-server": "^14.1.1",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "collectCoverageFrom": [
            "**/*.js",
            "!**/node_modules/**",
            "!**/test/**"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 70,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        },
        "testMatch": [
            "**/__tests__/**/*.js",
            "**/?(*.)+(spec|test).js"
        ]
    }